# Environment Configuration Template

# Copy this file to .env and fill in your values

# OpenAI Configuration (Required for Graphiti)
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration (PostgreSQL for metadata)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/tkg_context

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379

# FalkorDB Graph Database Configuration
FALKORDB_HOST=localhost
FALKORDB_PORT=6380
FALKORDB_PASSWORD=falkordb
FALKORDB_GRAPH_NAME=tkg_knowledge_graph

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Configuration
DEBUG=false
APP_NAME=TKG Context Engine

# Graphiti Configuration
GRAPHITI_LLM_PROVIDER=openai

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000